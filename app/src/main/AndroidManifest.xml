<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.integratorsb2b.ug">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:exported="false" />
        <activity android:name=".createaccount.CreateAccountActivity" />
        <activity
            android:name=".home.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".resit.ResitActivity"
            android:label="@string/apply_for_resit"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".transcript.TranscriptActivity"
            android:label="@string/request_for_transcript"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".payment.PaymentActivity"
            android:label="Select Payment Method"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".confirmation.ConfirmationActivity"
            android:label="Confirm Details" />
    </application>
</manifest>
