<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.integratorsb2b.ug">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/crest_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".createaccount.CreateAccountActivity" />
        <activity
            android:name=".home.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".resit.ResitActivity"
            android:label="@string/apply_for_resit"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".transcript.TranscriptActivity"
            android:label="@string/request_for_transcript"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".payment.PaymentActivity"
            android:label="Select Payment Method"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".confirmation.ConfirmationActivity"
            android:label="Confirm Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
