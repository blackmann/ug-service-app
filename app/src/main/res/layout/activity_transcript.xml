<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="presenter"
            type="com.integratorsb2b.ug.transcript.TranscriptPresenter"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_16">

                <TextView
                    style="@style/AppTheme.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/form_info" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/fields_required" />

                <TextView
                    style="@style/AppTheme.Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/student_number" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={presenter.studentNumber}"
                    android:inputType="text"
                    app:addTextChangedListener="@{presenter.onTextChanged}"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_16"
                    android:onCheckedChanged="@{presenter.deliveryChoiceListener}">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/margin_16"
                        android:id="@+id/post"
                        android:text="@string/post_by_mail" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup"
                        android:text="@string/pick_up" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/postalForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/AppTheme.Label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/full_postal_address" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:addTextChangedListener="@{presenter.onTextChanged}"
                        android:text="@={presenter.postalAddress}"
                        android:inputType="textPostalAddress|textMultiLine" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:id="@+id/next"
            android:onClick="@{() -> presenter.next()}"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/ic_next"/>
    </android.support.design.widget.CoordinatorLayout>
</layout>